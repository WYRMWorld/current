rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow anyone to fetch/view post media
    match /postMedia/{mediaPath=**} {
      allow read:  if true;
      allow write: if request.auth != null;
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
