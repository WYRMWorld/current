rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1) BLOG POSTS
    // Anyone (even not signed in) can read
    // Only signed-in users can create/update/delete
    match /posts/{postId} {
      allow read:   if true;
      allow create, update, delete: if request.auth != null;
    }

    // 2) FEEDBACK QUEUE
    // Only your Admin (signed in) needs to read/write
    match /feedback/{fbId} {
      allow read, write: if request.auth != null;
    }

    // 3) BEAT BATTLE QUEUE
    // Only your Admin (signed in) needs to read/write
    match /beatbattle/{bbId} {
      allow read, write: if request.auth != null;
    }

    // 4) ARCHIVE (optional)
    match /archive/{doc=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 5) lock everything else down
    match /{document=**} {
      allow read:  if false;
      allow write: if false;
    }
  }
}
